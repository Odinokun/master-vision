//begin profile-article__footer
footer.profile-article__footer
  form.profile-article__form
    .profile-article__form-input-wrap
      textarea(placeholder='Написать сообщение').profile-article__form-textarea
      .profile-article__form-photo
        +svg('photo')
      .profile-article__form-smile
        +svg('smile')
      .profile-article__form-submit-wrap
        input(type='submit').profile-article__form-submit
        +svg('arr-down')
    ul.profile-article__form-decor-list
      li.profile-article__form-decor-item.decor-01
        +svg('decor-01')
      li.profile-article__form-decor-item.decor-02
        +svg('decor-02')
      li.profile-article__form-decor-item.decor-03.double
        +svg('decor-03')
      li.profile-article__form-decor-item.decor-08
        +svg('decor-08')
        .profile-article__form-decor-arrow
          +svg('arr-down')
      li.profile-article__form-decor-item.decor-09
        +svg('decor-09')
        .profile-article__form-decor-arrow
          +svg('arr-down')
      li.profile-article__form-decor-item.decor-12
        +svg('decor-12')
        .profile-article__form-decor-arrow
          +svg('arr-down')
//end profile-article__footer
