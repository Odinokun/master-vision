//begin popup
.popup__layer

//begin popup-enter
#popup-enter.popup-enter.popup
  span.popup__close
    +svg('close')
  .popup-enter__tab-btns
    .popup-enter__tab-btn.active(data-tab='autorise') Авторизация
    .popup-enter__tab-btn(data-tab='register') Регистрация
  .popup-enter__tab-body

    //begin popup-enter__autorise
    .popup-enter__autorise.active
      input.popup-enter__input(name='phone', placeholder='Email или мобильный телефон')
      input.popup-enter__input(name='password', placeholder='Пароль')
      label.popup-enter__agree
        input(type='checkbox' checked)
        span
          |Я даю согласие на обработку
          =' '
          a(href="#") персональных данных*

      .popup-enter__entered
        button.btn.btn--dark
          +svg('enter')
          span Войти
        a(href="#").popup-enter__entered-amnesia Забыли пароль?

      .popup-enter__social
        .popup-enter__social-title Войти через Социальные сети
        .popup-enter__social-icons
          a.popup-enter__social-icon.popup-enter__social-icon--vk(href='#')
            +svg('vk')
          a.popup-enter__social-icon.popup-enter__social-icon--fb(href='#')
            +svg('fb')
          a.popup-enter__social-icon.popup-enter__social-icon--mail(href='#')
            +svg('mailru')
          a.popup-enter__social-icon.popup-enter__social-icon--yandex(href='#')
            +svg('yandex')
          a.popup-enter__social-icon.popup-enter__social-icon--gmail(href='#')
            +svg('google')
          a.popup-enter__social-icon.popup-enter__social-icon--odnok(href='#')
            +svg('odnok')
    //end popup-enter__autorise

    //begin popup-enter__register
    .popup-enter__register
      input.popup-enter__input(name='email', type='email', placeholder='Email')
      input.popup-enter__input(name='phone', type='tel', placeholder='Мобильный телефон')
      input.popup-enter__input(name='password', placeholder='Пароль')

      label.popup-enter__agree
        input(type='checkbox' checked)
        span
          | Я даю согласие на обработку
          =' '
          a(href="#") персональных данных*

      .popup-enter__entered
        button.btn.btn--dark
          span Зарегистрироваться

      .popup-enter__social
        .popup-enter__social-title Войти через Социальные сети
        .popup-enter__social-icons
          a.popup-enter__social-icon.popup-enter__social-icon--vk(href='#')
            +svg('vk')
          a.popup-enter__social-icon.popup-enter__social-icon--fb(href='#')
            +svg('fb')
          a.popup-enter__social-icon.popup-enter__social-icon--mail(href='#')
            +svg('mailru')
          a.popup-enter__social-icon.popup-enter__social-icon--yandex(href='#')
            +svg('yandex')
          a.popup-enter__social-icon.popup-enter__social-icon--gmail(href='#')
            +svg('google')
          a.popup-enter__social-icon.popup-enter__social-icon--odnok(href='#')
            +svg('odnok')
    //end popup-enter__register

//end popup-enter

//begin popup-form-regist
#popup-form-regist.popup
  span.popup__close
    +svg('close')
  .popup__inner.popup__inner--for-form
    form.popup__form
      p.popup__title Регистрация
      input.popup__input(name='email', type='email', placeholder='Email')
      input.popup__input(name='phone', type='tel', placeholder='Мобильный телефон')
      input.popup__input(name='password', type='text', placeholder='Пароль')
      .popup__social
        .popup__social--title Зарегистрироваться через Социальные сети
        .popup__social-icons
          a.popup__social-icon.popup__social-icon--vk(href='#')
            +svg('vk')
          a.popup__social-icon.popup__social-icon--fb(href='#')
            +svg('fb')
          a.popup__social-icon.popup__social-icon--mail(href='#')
            +svg('mailru')
          a.popup__social-icon.popup__social-icon--yandex(href='#')
            +svg('yandex')
          a.popup__social-icon.popup__social-icon--gmail(href='#')
            +svg('google')
        p.popup__social-text Не беспокойтесь, мы ничего не публикуем без вашего разрешения
      .popup__input__agree
        input#agree2.popup__input__checkbox(type='checkbox', name='agree', value='yes')
        label(for='agree2')
          span
          i.popup__text-input
            | Я даю согласие на обработку
            =' '
            a(href='#') персональных данных*
      input.btn.btn--dark(type='submit', value='Войти')
      p.popup__text
        | Есть аккаунт?
        =' '
        a.popup-link(href='#popup-form') Авторизоваться
//end popup-form-regist
  
