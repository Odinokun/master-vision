mixin profile-aside__menu-item(svg, text, active)
  //begin profile-aside__menu-item
  li(class='profile-aside__menu-item ' + active + '')
    a(href="#").profile-aside__menu-link
      div(class='profile-aside__menu-svg profile-aside__menu-svg--' + svg +'')
        svg
          use(xlink:href="assets/img/sprite.svg#" + svg + "")
      span.profile-aside__menu-text #{text}
  //end profile-aside__menu-item

//begin profile-aside__menu
nav.profile-aside__menu.aside-item
  ul.profile-aside__menu-list
    +profile-aside__menu-item('paper', 'Основная информация', 'active')
    +profile-aside__menu-item('hat', 'Образование','')
    +profile-aside__menu-item('lock', 'Личная информация','')
    +profile-aside__menu-item('invite', 'Пригласить друга','')
    +profile-aside__menu-item('wallet', 'Мой счет','')
//end profile-aside__menu
