extends ../_template

mixin profile-aside__menu-item(svg, text, active)
  //begin profile-aside__menu-item
  li(class='profile-aside__menu-item ' + active + '')
    a(href="#").profile-aside__menu-link
      div(class='profile-aside__menu-svg profile-aside__menu-svg--' + svg +'')
        svg
          use(xlink:href="assets/img/sprite.svg#" + svg + "")
      span.profile-aside__menu-text #{text}
  //end profile-aside__menu-item

mixin profile-balance__radio-item(img, text, active)
  //begin profile-balance__radio-item
  label(class="profile-balance__radio-item " + active)
    .profile-balance__radio-img
      img(src="assets/img/" + img + '' alt="picture")
    input(type='radio' name='balance')
    span #{text}
  //end profile-balance__radio-item

block variables
  - var title       = 'Master Vision'
  - var description = 'Master Vision'
  - var ogtitle     = 'Master Vision'

block content
  .main-wrap
    include ../sections/header

    //begin content
    main.main.profile-balance
      include ../sections/header/profile-header
      .container.profile-edit__header
        h2.profile-edit__title Пополнение баланса
        .profile-edit__return-btn
          a(href="#").btn.btn--light Вернуться на мою страницу

      .profile-main
        .container
          //begin profile-aside
          .profile-aside
            //begin profile-aside__menu
            nav.profile-aside__menu.aside-item
              ul.profile-aside__menu-list
                +profile-aside__menu-item('paper', 'Основная информация', '')
                +profile-aside__menu-item('hat', 'Образование','')
                +profile-aside__menu-item('personal', 'Личная информация','')
                +profile-aside__menu-item('invite', 'Пригласить друга','')
                +profile-aside__menu-item('wallet', 'Мой счет','active')
                +profile-aside__menu-item('ring', 'Настройка уведомлений','')
            //end profile-aside__menu
          //end profile-aside

          //begin profile-edit-body
          .profile-edit-body
            //begin profile-balance__form
            form.profile-balance__form
              h3.profile-balance__title На Вашем счёте 4000 баллов
              span.profile-balance__subtitle Выберите способ пополнения:

              .profile-balance__radio-row
                +profile-balance__radio-item('bank-cards.svg', 'Банковская карта', 'active')
                +profile-balance__radio-item('paypal.png', 'PayPal', '')
                +profile-balance__radio-item('yandexmoney.png', 'Яндекс Деньги', '')
                +profile-balance__radio-item('invoice.svg', 'Оплата по счету', '')
              .profile-balance__input-wrap
                input(placeholder='Введите количество баллов для покупки').profile-balance__input
                input(type='submit' value='Пополнить').btn.btn--dark
            //end profile-balance__form
          //end profile-edit-body
    //end content

    include ../sections/footer
